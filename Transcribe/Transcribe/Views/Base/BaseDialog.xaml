<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Transcribe.Views.Base.BaseDialog"
             x:Name="baseDialog">


    <ContentView.Content>

        <Frame
            HasShadow="False"
            BorderColor="Transparent"
            Opacity="0.3"
            CornerRadius="0"
            Padding="0"
            Margin="0"
            BackgroundColor="{StaticResource Gray900}"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            MaximumHeightRequest="{Binding MaximumHeight, Source={x:Reference baseDialog}}">

            <StackLayout 
                HorizontalOptions="FillAndExpand" 
                BackgroundColor="White"
                Margin="32,0,32,0"
                Padding="16, 8, 16, 8"
                Orientation="Vertical"
                VerticalOptions="Center">

                <Label 
                    Text="{Binding Title, Source={x:Reference baseDialog}}" 
                    FontSize="18" 
                    TextColor="{StaticResource CardPrimaryColor}"
                    FontAttributes="Bold" />

                <ContentView x:Name="viewContent" VerticalOptions="FillAndExpand">

                </ContentView>

            </StackLayout>

        </Frame>

    </ContentView.Content>
    
</ContentView>
